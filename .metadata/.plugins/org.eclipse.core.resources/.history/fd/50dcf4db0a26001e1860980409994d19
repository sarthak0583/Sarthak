package package1;

public class Global_Variable 
{
    int a=10;// any variable with blue color is global variable.
    static int c;
    static String b="Sarthak";
	public static void main(String[] args)
	{
		int a=12;
		System.out.println(c);//default value of int is 0.
		c=15;
		String name ="Das";// any variable with brown color is local variable 
		System.out.println(c);
		System.out.println(name);//local variable
        System.out.println(b);//global variable
        Global_Variable g1= new Global_Variable();//creating an object with reference variable.
        System.out.println(g1.a);//calling not static global variable with reference variable.
	}

}
